<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigurationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" >

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/ConfigurationTitle"
            android:paddingLeft="@dimen/espaiesquerra"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espaitext"
        android:text="@string/alias"
        android:textSize="@dimen/midatextconfig"
        android:paddingLeft="@dimen/espaiesquerra"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/OptionsImage1"
            android:layout_width="@dimen/midaimatgepetita"
            android:layout_height="@dimen/midaimatgepetita"
            android:src="@drawable/connect4_logox30"
            android:paddingLeft="@dimen/espaiesquerra"/>

        <EditText
            android:id="@+id/aliasEditText1"
            android:layout_marginLeft="@dimen/margeditext"
            android:layout_marginTop="@dimen/esquerraeditext"
            android:layout_width="@dimen/ampladaeditext"
            android:layout_height="wrap_content"
            android:hint="@string/alias"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/midaimatgepetita"
            android:layout_height="@dimen/midaimatgepetita"
            android:src="@drawable/connect4_logox30"
            android:layout_marginTop="@dimen/midaimatgepetita"
            android:paddingLeft="@dimen/espaiesquerra"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size"
            android:layout_marginTop="@dimen/separacio"
            android:layout_marginLeft="@dimen/espaiesquerra"
            android:textSize="@dimen/midatextconfig"
            />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/espaitext"
        android:paddingLeft="@dimen/distanciabotons">



        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optionGrid1"/>

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optionGrid2"/>

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/optionGrid3"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separacio"
        android:text="@string/time"
        android:textSize="@dimen/midatextconfig"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/midaimatgepetita"
            android:layout_height="@dimen/midaimatgepetita"
            android:src="@drawable/connect4_logox30"
            android:layout_marginTop="@dimen/espaitext"
            android:paddingLeft="@dimen/espaiesquerra"
            />

        <CheckBox
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkboxmargintop"
            android:layout_marginLeft="@dimen/espaiesquerra" />

    </LinearLayout>

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separacio"
        android:layout_gravity="center"
        android:text="ComenÃ§ar ! (CPU)"
        />

    <Button
        android:id="@+id/twoplayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separacio"
        android:layout_gravity="center"
        android:text="2 jugadors"
        />

</LinearLayout>